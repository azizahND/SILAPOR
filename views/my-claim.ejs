<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Laporan Diklaim</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
      .gradient-bg {
        background-image: linear-gradient(to right, #22c55e, #16a34a);
      }
    </style>
  </head>
  <body class="bg-gray-100 dark:bg-neutral-900">
    <%- include('components/navbar') %>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-6">
        Laporan Diklaim
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% reports.forEach(report => { %>
        <div
          class="bg-white dark:bg-neutral-800 rounded-2xl border border-gray-200 dark:border-neutral-700 overflow-hidden shadow-sm hover:shadow-xl transition-shadow duration-300"
        >
          <div class="relative">
            <img
              src="/uploads/<%= report.foto_barang %>"
              alt="<%= report.nama_barang %>"
              class="w-full h-48 object-cover"
            />
          </div>

          <div class="p-6">
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                <%= report.nama_barang %>
              </h3>
            </div>
            <p
              class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-3"
            >
              <%= report.deskripsi %>
            </p>

            <div class="space-y-3 mb-5">
              <div
                class="flex items-center text-sm text-gray-500 dark:text-gray-400"
              >
                <i class="fas fa-map-marker-alt w-4 h-4 mr-2"></i>
                <%= report.lokasi %>
              </div>
              <div
                class="flex items-center text-sm text-gray-500 dark:text-gray-400"
              >
                <i class="fas fa-user-circle w-4 h-4 mr-2"></i>
                Ditemukan oleh: <%= report.User.nama %>
              </div>
            </div>

            <div class="flex gap-4">

              <button
                type="button"
                class="flex-1 bg-red-600 hover:bg-red-700 text-white py-3 px-4 rounded-xl font-semibold text-base transition-colors duration-200 shadow-sm"
                data-id="<%= report.id_laporan %>"
                data-nama="<%= report.nama_barang %>"
                onclick="openCancelModal(this)"
              >
                Batal Klaim
              </button>

              <button
                class="flex-1 bg-white hover:bg-gray-100 dark:bg-neutral-700 dark:hover:bg-neutral-600 text-gray-700 dark:text-gray-300 py-3 px-4 rounded-xl font-semibold text-base transition-colors duration-200 shadow-sm"
              >
                Detail
              </button>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <div
      id="cancelModal"
      class="hs-overlay hidden fixed top-0 left-0 z-50 w-full h-full flex items-center justify-center bg-black/50"
      role="dialog"
      tabindex="-1"
    >
      <div
        class="bg-white dark:bg-neutral-800 rounded-xl shadow-md w-full max-w-md"
      >
        <div class="py-3 px-4 border-b border-gray-200 dark:border-neutral-700">
          <h3 class="font-bold text-gray-800 dark:text-white">
            Konfirmasi Batal Klaim
          </h3>
        </div>
        <div class="p-4">
          <p class="text-gray-800 dark:text-neutral-400">
            Apakah kamu yakin ingin membatalkan klaim laporan
            <span id="modalItemName" class="font-semibold"></span>?
          </p>
        </div>
        <div
          class="flex justify-end gap-2 py-3 px-4 border-t border-gray-200 dark:border-neutral-700"
        >
          <button
            type="button"
            class="py-2 px-3 text-sm font-medium rounded-lg bg-gray-200 text-gray-800 hover:bg-gray-300 dark:bg-neutral-700 dark:text-white"
            data-hs-overlay="#cancelModal"
          >
            Tidak
          </button>
          <form id="cancelForm" method="POST">
            <button
              type="submit"
              class="py-2 px-3 text-sm font-medium rounded-lg bg-red-600 text-white hover:bg-red-700"
            >
              Ya
            </button>
          </form>
        </div>
      </div>
    </div>

    <script src="https://unpkg.com/preline@^2/dist/preline.js"></script>
    <script>
      function openCancelModal(button) {
        const id = button.dataset.id;
        const nama = button.dataset.nama;
        document.getElementById("modalItemName").textContent = nama;
        document.getElementById("cancelForm").action = "/claim/cancel/" + id;
        HSOverlay.open(document.getElementById("cancelModal"));
      }
    </script>
  </body>
</html>
