<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Laporan Penemuan</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
      .gradient-bg {
        background-image: linear-gradient(to right, #22c55e, #16a34a);
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <%- include('components/navbar') %>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="gradient-bg rounded-2xl p-8 mb-10 shadow-lg text-white">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div>
            <h1 class="text-3xl lg:text-4xl font-bold mb-2">Selamat Datang!</h1>
            <p class="text-lg lg:text-xl opacity-90 font-light">
              Sistem Pelaporan Kehilangan dan Penemuan Barang
            </p>
          </div>
          <div class="mt-6 md:mt-0">
            <a
              href="/mahasiswa/reports"
              class="inline-flex items-center bg-white text-green-600 px-6 py-3 rounded-xl font-semibold hover:bg-gray-100 transition duration-300 transform hover:scale-105 shadow-md"
            >
              <i class="fas fa-plus mr-2"></i>Buat Laporan Baru
            </a>
          </div>
        </div>
      </div>

      <h2 class="text-2xl font-semibold text-gray-800 mb-6">
        Laporan Penemuan Terbaru
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% reports.forEach(report => { %>
        <div
          class="bg-white rounded-2xl border border-gray-200 overflow-hidden shadow-sm hover:shadow-xl transition-shadow duration-300"
        >
          <div class="relative">
            <img
              src="/uploads/<%= report.foto_barang %>"
              alt="<%= report.nama_barang %>"
              class="w-full h-48 object-cover"
            />
            <div class="absolute top-4 left-4">
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800"
              >
                <svg
                  class="w-3 h-3 mr-1"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <circle cx="10" cy="10" r="3"></circle>
                </svg>
                Tersedia
              </span>
            </div>
            <div class="absolute top-4 right-4">
              <span
                class="text-xs text-white bg-black/50 px-2 py-1 rounded-full font-medium"
                >2 jam lalu</span
              >
            </div>
          </div>
          <div class="p-6">
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-xl font-bold text-gray-900">
                <%= report.nama_barang %>
              </h3>
            </div>
            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
              <%= report.deskripsi %>
            </p>

            <div class="space-y-3 mb-5">
              <div class="flex items-center text-sm text-gray-500">
                <i class="fas fa-map-marker-alt w-4 h-4 mr-2"></i>
                <%= report.lokasi %>
              </div>
              <div class="flex items-center text-sm text-gray-500">
                <i class="fas fa-user-circle w-4 h-4 mr-2"></i>
                Ditemukan oleh: <%= report.User?.nama %>
              </div>
            </div>

            <div class="flex gap-4">
              <button
                class="btn-klaim flex-1 bg-green-100 hover:bg-green-200 text-green-600 py-2.5 px-4 rounded-xl font-semibold text-sm transition-all duration-200 shadow-md hover:shadow-lg"
                data-id="<%= report.id_laporan %>"
              >
                Klaim Barang
              </button>

              <button
                class="bg-gray-100 hover:bg-gray-200 text-gray-700 py-3 px-4 rounded-xl font-semibold text-sm transition-all duration-200 shadow-md hover:shadow-lg"
                data-hs-overlay="#detailModal-<%= report.id_laporan %>"
              >
                <i class="fas fa-info-circle mr-2"></i>Detail
              </button>
            </div>
          </div>
          <div
            id="detailModal-<%= report.id_laporan %>"
            class="hs-overlay hidden fixed top-0 left-0 z-50 w-full h-full flex items-center justify-center bg-black/50"
            role="dialog"
            tabindex="-1"
          >
            <div class="bg-white rounded-xl shadow-md w-full max-w-md">
              <div
                class="flex justify-between items-center p-5 border-b border-gray-200"
              >
                <h3 class="text-xl font-bold text-gray-800">Detail Laporan</h3>
                <button
                  type="button"
                  class="text-gray-400 hover:text-gray-600 transition"
                  data-hs-overlay="#detailModal-<%= report.id_laporan %>"
                  aria-label="Close"
                >
                  <i class="fas fa-times fa-lg"></i>
                </button>
              </div>

              <div class="p-4 space-y-2">
                <img
                  src="/uploads/<%= report.foto_barang %>"
                  alt="<%= report.nama_barang %>"
                  class="rounded-lg w-full object-cover mb-4"
                />
                <p><strong>Nama pelapor:</strong> <%= report.User?.nama %></p>
                <p><strong>Nama barang:</strong> <%= report.nama_barang %></p>
                <p><strong>Jenis laporan:</strong> <%= report.jenis_laporan %></p>
                <p>
                  <strong>Tanggal laporan:</strong>
                  <%= report.tanggal_laporan.toLocaleDateString("id-ID") %>
                </p>
                <p><strong>Lokasi:</strong> <%= report.lokasi %></p>
                <p><strong>Deskripsi:</strong> <%= report.deskripsi %></p>
              </div>
              <div class="p-4 border-t border-gray-200 text-right">
                <button
                  type="button"
                  class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-semibold"
                  data-hs-overlay="#detailModal-<%= report.id_laporan %>"
                >
                  Tutup
                </button>
              </div>
            </div>
          </div>
        </div>
        <% }) %>

        <div
          id="modal-kontak"
          class="hs-overlay hidden fixed top-0 left-0 z-50 w-full h-full flex items-center justify-center bg-black/50"
          role="dialog"
          tabindex="-1"
        >
          <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-md">
            <div class="flex justify-between items-center pb-4 border-b">
              <h3 class="text-2xl font-bold text-gray-800">Kontak Pelapor</h3>
              <button
                type="button"
                class="text-gray-400 hover:text-gray-600 transition"
                data-hs-overlay="#modal-kontak"
                aria-label="Close"
              >
                <i class="fas fa-times fa-lg"></i>
              </button>
            </div>

            <div id="kontak-content" class="space-y-4 pt-5 text-gray-700">
              </div>

            <div class="mt-8 flex justify-end gap-3">
              <button
                type="button"
                class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 py-3 px-4 rounded-xl font-semibold transition-colors duration-200"
                data-hs-overlay="#modal-kontak"
              >
                Tutup
              </button>
              <button
                id="btn-whatsapp"
                class="flex-1 bg-green-100 hover:bg-green-200 text-green-600 py-2.5 px-4 rounded-xl font-semibold text-sm transition-all duration-200 shadow-md hover:shadow-lgg"
              >
                <i class="fab fa-whatsapp text-xl mr-2"></i> WhatsApp
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://unpkg.com/preline@^2/dist/preline.js"></script>
    <script>
      document.querySelectorAll(".btn-klaim").forEach((btn) => {
        btn.addEventListener("click", async () => {
          const id_laporan = btn.dataset.id;

          try {
            const response = await fetch("/mahasiswa/claim", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ id_laporan }),
            });

            const result = await response.json();
            if (result.success) {
              const kontak = result.kontakPelapor;
              // LOGIKA SCRIPT UNTUK MEMBENTUK KONTEN MODAL KONTAK
              document.getElementById("kontak-content").innerHTML = `
                <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                    <i class="fas fa-user-circle w-5 h-5 text-green-600 mr-3"></i>
                    <div>
                        <p class="text-xs text-gray-500">Nama</p>
                        <p class="font-medium">${kontak.nama}</p>
                    </div>
                </div>
                <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                    <i class="fas fa-envelope w-5 h-5 text-green-600 mr-3"></i>
                    <div>
                        <p class="text-xs text-gray-500">Email</p>
                        <p class="font-medium">${kontak.email}</p>
                    </div>
                </div>
                <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                    <i class="fas fa-phone w-5 h-5 text-green-600 mr-3"></i>
                    <div>
                        <p class="text-xs text-gray-500">No. Telepon</p>
                        <p class="font-medium">${kontak.no_telepon}</p>
                    </div>
                </div>
                <div class="flex items-start p-3 bg-gray-50 rounded-lg">
                    <i class="fas fa-map-marked-alt w-5 h-5 text-green-600 mr-3 mt-1"></i>
                    <div>
                        <p class="text-xs text-gray-500">Alamat</p>
                        <p class="font-medium">${kontak.alamat}</p>
                    </div>
                </div>
              `;

              const btnWA = document.getElementById("btn-whatsapp");
              btnWA.onclick = () => {
                const noHP = kontak.no_telepon.replace(/[^0-9]/g, "");
                const pesan = encodeURIComponent(
                  `Halo ${kontak.nama}, saya ingin menghubungi terkait laporan barang.`
                );
                const linkWA = `https://wa.me/${noHP}?text=${pesan}`;
                window.open(linkWA, "_blank");

                HSOverlay.close(document.getElementById("modal-kontak"));
              };

              HSOverlay.open(document.getElementById("modal-kontak"));
            } else {
              alert(result.message);
            }
          } catch (err) {
            console.error(err);
            alert("Gagal klaim laporan");
          }
        });
      });
    </script>
  </body>
</html>