<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laporan Saya</title>
    <link href="/css/output.css" rel="stylesheet">
    <!-- SweetAlert2 untuk konfirmasi delete -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-6xl mx-auto">
            <!-- Header -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <div class="flex justify-between items-center">
                    <h1 class="text-2xl font-bold text-green-600">Laporan Saya</h1>
                    <a href="/reports/create" 
                       class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors">
                        Buat Laporan Baru
                    </a>
                </div>
            </div>

            <!-- Filter & Search -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Filter Status</label>
                        <select id="statusFilter" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
                            <option value="">Semua Status</option>
                            <option value="Baru">Baru</option>
                            <option value="Diproses">Diproses</option>
                            <option value="Selesai">Selesai</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Filter Tipe</label>
                        <select id="typeFilter" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
                            <option value="">Semua Tipe</option>
                            <option value="Hilang">Kehilangan</option>
                            <option value="Temuan">Penemuan</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Cari</label>
                        <input type="text" id="searchInput" placeholder="Cari dalam keterangan..." 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
                    </div>
                </div>
            </div>

            <!-- Reports List -->
            <div class="space-y-4" id="reportsList">
                <% if (reports && reports.length > 0) { %>
                    <% reports.forEach(function(report) { %>
                        <div class="bg-white rounded-lg shadow-md p-6 report-item" 
                             data-status="<%= report.statusLaporan %>" 
                             data-type="<%= report.tipeLaporan %>">
                            <div class="flex justify-between items-start">
                                <div class="flex-1">
                                    <div class="flex items-center space-x-4 mb-4">
                                        <!-- Status Badge -->
                                        <span class="px-3 py-1 text-xs font-medium rounded-full
                                            <% if (report.statusLaporan === 'Baru') { %>
                                                bg-blue-100 text-blue-800
                                            <% } else if (report.statusLaporan === 'Diproses') { %>
                                                bg-yellow-100 text-yellow-800
                                            <% } else if (report.statusLaporan === 'Selesai') { %>
                                                bg-green-100 text-green-800
                                            <% } %>">
                                            <%= report.statusLaporan %>
                                        </span>
                                        
                                        <!-- Type Badge -->
                                        <span class="px-3 py-1 text-xs font-medium rounded-full
                                            <% if (report.tipeLaporan === 'Hilang') { %>
                                                bg-red-100 text-red-800
                                            <% } else { %>
                                                bg-green-100 text-green-800
                                            <% } %>">
                                            <%= report.tipeLaporan %>
                                        </span>
                                        
                                        <!-- Date -->
                                        <span class="text-sm text-gray-500">
                                            <%= new Date(report.tanggalLaporan).toLocaleDateString('id-ID', {
                                                year: 'numeric',
                                                month: 'long',
                                                day: 'numeric'
                                            }) %>
                                        </span>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <p class="text-gray-800 leading-relaxed">
                                            <%= report.keterangan.length > 200 ? 
                                                report.keterangan.substring(0, 200) + '...' : 
                                                report.keterangan %>
                                        </p>
                                    </div>
                                </div>
                                
                                <div class="flex flex-col space-y-2 ml-4">
                                    <a href="/reports/<%= report.id %>" 
                                       class="px-3 py-2 bg-blue-600 text-white text-xs rounded-md hover:bg-blue-700 transition-colors text-center">
                                        Detail
                                    </a>
                                    <a href="/reports/<%= report.id %>/edit" 
                                       class="px-3 py-2 bg-yellow-600 text-white text-xs rounded-md hover:bg-yellow-700 transition-colors text-center">
                                        Edit
                                    </a>
                                    <button onclick="deleteReport('<%= report.id %>')" 
                                            class="px-3 py-2 bg-red-600 text-white text-xs rounded-md hover:bg-red-700 transition-colors">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="bg-white rounded-lg shadow-md p-12 text-center">
                        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Belum ada laporan</h3>
                        <p class="text-gray-500 mb-6">Anda belum membuat laporan apapun. Mulai dengan membuat laporan pertama Anda.</p>
                        <a href="/reports/create" 
                           class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            Buat Laporan
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const statusFilter = document.getElementById('statusFilter');
            const typeFilter = document.getElementById('typeFilter');
            const searchInput = document.getElementById('searchInput');
            const reportItems = document.querySelectorAll('.report-item');

            // Filter function
            function filterReports() {
                const statusValue = statusFilter.value.toLowerCase();
                const typeValue = typeFilter.value.toLowerCase();
                const searchValue = searchInput.value.toLowerCase();

                reportItems.forEach(function(item) {
                    const itemStatus = item.dataset.status.toLowerCase();
                    const itemType = item.dataset.type.toLowerCase();
                    const itemText = item.textContent.toLowerCase();

                    const statusMatch = !statusValue || itemStatus.includes(statusValue);
                    const typeMatch = !typeValue || itemType.includes(typeValue);
                    const searchMatch = !searchValue || itemText.includes(searchValue);

                    if (statusMatch && typeMatch && searchMatch) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            }

            // Add event listeners
            statusFilter.addEventListener('change', filterReports);
            typeFilter.addEventListener('change', filterReports);
            searchInput.addEventListener('input', filterReports);
        });

        // Function to delete report
        async function deleteReport(reportId) {
            const result = await Swal.fire({
                title: 'Konfirmasi Hapus',
                text: 'Apakah Anda yakin ingin menghapus laporan ini?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc2626',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Ya, Hapus!',
                cancelButtonText: 'Batal'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/reports/${reportId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        await Swal.fire({
                            title: 'Berhasil!',
                            text: 'Laporan berhasil dihapus',
                            icon: 'success',
                            confirmButtonText: 'OK',
                            confirmButtonColor: '#16a34a'
                        });

                        // Reload page to refresh the list
                        window.location.reload();
                    } else {
                        throw new Error(data.message || 'Gagal menghapus laporan');
                    }
                } catch (error) {
                    await Swal.fire({
                        title: 'Gagal!',
                        text: error.message || 'Terjadi kesalahan saat menghapus laporan',
                        icon: 'error',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#dc2626'
                    });
                }
            }
        }
    </script>