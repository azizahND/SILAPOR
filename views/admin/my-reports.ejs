    <script>
      // Pastikan SweetAlert2 sudah dimuat (misalnya dari CDN)

      // --- UTILITIES & MODAL EDIT/DELETE (TIDAK BERUBAH) ---

      function confirmDelete(id_laporan) {
        Swal.fire({
          title: "Apakah Anda yakin?",
          text: "Laporan ini akan dihapus secara permanen!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#ef4444",
          cancelButtonColor: "#6b7280",
          confirmButtonText: "Ya, hapus!",
          cancelButtonText: "Batal",
          buttonsStyling: false,
          customClass: {
            confirmButton:
              "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg mr-3",
            cancelButton:
              "bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-lg",
          },
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/admin/reports/delete/${id_laporan}`, {
              method: "DELETE",
            })
              .then((res) => res.json())
              .then((data) => {
                if (data.success) {
                  Swal.fire({
                    title: "Berhasil!",
                    text: data.message,
                    icon: "success",
                    confirmButtonText: "OK",
                    customClass: {
                      confirmButton:
                        "bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg",
                    },
                  }).then(() => {
                    window.location.reload();
                  });
                } else {
                  Swal.fire("Error", data.message, "error");
                }
              })
              .catch(() => {
                Swal.fire("Error", "Terjadi kesalahan server", "error");
              });
          }
        });
      }

      const editModal = document.getElementById("editReportModal");
      const editForm = document.getElementById("editReportForm");
      // Perhatikan: modalContent di sini mungkin undefined jika Anda tidak menyertakan elemen HTML modal Edit
      const editModalContent = editModal
        ? editModal.querySelector(".modal-content")
        : null;

      function openEditModal(reportData) {
        const report = JSON.parse(reportData);
        document.getElementById("edit-nama-barang").value = report.nama_barang;
        document.getElementById("edit-lokasi").value = report.lokasi;
        document.getElementById("edit-deskripsi").value = report.deskripsi;
        document.getElementById(
          "current-foto"
        ).src = `/uploads/${report.foto_barang}`;
        editForm.action = `/admin/reports/update/${report.id_laporan}`;

        if (editModal) {
          editModal.classList.remove("hidden");
          setTimeout(() => {
            if (editModalContent)
              editModalContent.classList.remove("scale-95", "opacity-0");
          }, 50);
        }
      }

      function closeEditModal() {
        if (editModalContent) {
          editModalContent.classList.add("scale-95", "opacity-0");
          setTimeout(() => {
            editModal.classList.add("hidden");
            document.getElementById("edit-foto").value = "";
          }, 300);
        }
      }

      if (editModal) {
        editModal.addEventListener("click", (event) => {
          if (event.target === editModal) {
            closeEditModal();
          }
        });
      }

      // --- MODAL DETAIL (TIDAK BERUBAH) ---

      const detailModal = document.getElementById("detailReportModal");
      // Perhatikan: detailModalContent di sini mungkin undefined jika Anda tidak menyertakan elemen HTML modal Detail
      const detailModalContent = detailModal
        ? detailModal.querySelector(".modal-content")
        : null;

      function openDetailModal(reportData) {
        const report = JSON.parse(reportData);

        document.getElementById(
          "detail-foto"
        ).src = `/uploads/${report.foto_barang}`;
        document.getElementById("detail-nama-barang").textContent =
          report.nama_barang;
        document.getElementById("detail-pelapor").textContent = report.User
          ? report.User.nama
          : "Tidak diketahui";
        document.getElementById("detail-lokasi").textContent = report.lokasi;
        document.getElementById("detail-deskripsi").textContent =
          report.deskripsi;

        document.getElementById("detail-tanggal").textContent = new Date(
          report.createdAt || Date.now()
        ).toLocaleDateString("id-ID", {
          year: "numeric",
          month: "long",
          day: "numeric",
        });

        const statusBadge = document.getElementById("detail-status-badge");
        statusBadge.textContent = report.status;
        statusBadge.className =
          "px-3 py-1.5 rounded-full text-sm font-semibold text-white";
        if (report.status === "Ditemukan" || report.status === "Claimed") {
          statusBadge.classList.add("bg-green-500");
        } else if (
          report.status === "On progress" ||
          report.status === "Pending"
        ) {
          statusBadge.classList.add("bg-yellow-500");
        } else {
          statusBadge.classList.add("bg-red-500");
        }

        if (detailModal) {
          detailModal.classList.remove("hidden");
          setTimeout(() => {
            if (detailModalContent)
              detailModalContent.classList.remove("scale-95", "opacity-0");
          }, 50);
        }
      }

      function closeDetailModal() {
        if (detailModalContent) {
          detailModalContent.classList.add("scale-95", "opacity-0");
          setTimeout(() => {
            detailModal.classList.add("hidden");
          }, 300);
        }
      }

      if (detailModal) {
        detailModal.addEventListener("click", (event) => {
          if (event.target === detailModal) closeDetailModal();
        });
      }

      // --- MODAL CONTACT (TIDAK BERUBAH) ---

      const contactModal = document.getElementById("contactModal");
      const contactContent = contactModal
        ? contactModal.querySelector(".modal-content")
        : null;

      function openContactModal(nama, noHp, email) {
        document.getElementById("ownerName").innerText = nama || "-";
        document.getElementById("ownerPhone").innerText = noHp || "-";
        document.getElementById("ownerEmail").innerText = email || "-";
        document.getElementById("waLink").href = noHp
          ? `https://wa.me/${noHp.replace(/\D/g, "")}`
          : "#";

        if (contactModal) {
          contactModal.classList.remove("hidden");
          setTimeout(() => {
            if (contactContent)
              contactContent.classList.remove("scale-95", "opacity-0");
          }, 50);
        }
      }

      function closeContactModal() {
        if (contactContent) {
          contactContent.classList.add("scale-95", "opacity-0");
          setTimeout(() => {
            contactModal.classList.add("hidden");
          }, 300);
        }
      }

      if (contactModal) {
        contactModal.addEventListener("click", (e) => {
          if (e.target === contactModal) closeContactModal();
        });
      }

      // --- MODAL TOLAK KLAIM (PERBAIKAN FUNGSI) ---

      const rejectClaimModal = document.getElementById("rejectClaimModal");
      const rejectClaimContent = rejectClaimModal
        ? rejectClaimModal.querySelector(".modal-content")
        : null;
      const rejectClaimForm = document.getElementById("rejectClaimForm");

      // Function untuk membuka modal Tolak Claim (menambahkan transisi)
      function openRejectClaimModal(id_laporan) {
        if (!rejectClaimModal || !rejectClaimForm) return;

        rejectClaimForm.dataset.idLaporan = id_laporan;
        // Reset form state dan pastikan tombol submit non-aktif saat dibuka
        rejectClaimForm.reset();
        document
          .getElementById("alasanLainnyaContainer")
          .classList.add("hidden");
        document.getElementById("submitRejectClaim").disabled = true;

        rejectClaimModal.classList.remove("hidden");
        setTimeout(() => {
          if (rejectClaimContent)
            rejectClaimContent.classList.remove("scale-95", "opacity-0");
        }, 50);
      }

      // Function untuk menutup modal Tolak Claim (menambahkan transisi)
      function closeRejectClaimModal() {
        if (!rejectClaimModal || !rejectClaimContent) return;

        rejectClaimContent.classList.add("scale-95", "opacity-0");
        setTimeout(() => {
          rejectClaimModal.classList.add("hidden");
          // Reset form setelah ditutup
          if (rejectClaimForm) rejectClaimForm.reset();
        }, 300);
      }

      if (rejectClaimModal) {
        rejectClaimModal.addEventListener("click", (e) => {
          if (e.target === rejectClaimModal) closeRejectClaimModal();
        });
      }

      // Detect when user selects "Alasan lainnya" in the dropdown
      const alasanSelect = document.getElementById("alasan");
      if (alasanSelect) {
        alasanSelect.addEventListener("change", function () {
          const alasanLainnyaContainer = document.getElementById(
            "alasanLainnyaContainer"
          );
          const submitButton = document.getElementById("submitRejectClaim");

          const isLainnya = this.value === "Alasan lainnya";

          // Tampilkan/sembunyikan kolom alasan lainnya
          alasanLainnyaContainer.classList.toggle("hidden", !isLainnya);
          document.getElementById("alasanLain").value = isLainnya
            ? document.getElementById("alasanLain").value
            : "";

          // Aktifkan tombol submit
          submitButton.disabled = !this.value;

          // Jika 'Alasan lainnya' dipilih, tombol hanya aktif jika teksnya terisi
          if (isLainnya) {
            const alasanLainTextarea = document.getElementById("alasanLain");
            const checkLainnya = () => {
              submitButton.disabled = !alasanLainTextarea.value.trim();
            };
            alasanLainTextarea.oninput = checkLainnya;
            checkLainnya(); // Cek status awal
          } else {
            document.getElementById("alasanLain").oninput = null;
          }
        });
      }

      // Handle the form submission to update the claim and report status
      if (rejectClaimForm) {
        rejectClaimForm.addEventListener("submit", async function (e) {
          e.preventDefault();

          const id_laporan = this.dataset.idLaporan;
          const alasan = document.getElementById("alasan").value;
          const alasanLain = document.getElementById("alasanLain").value;

          const submitButton = document.getElementById("submitRejectClaim");
          const originalText = submitButton.textContent;

          // Feedback Loading
          submitButton.textContent = "Memproses...";
          submitButton.disabled = true;

          let success = false;

          try {
            // *** PERBAIKAN UTAMA: Ganti URL dari /mahasiswa menjadi /admin ***
            const response = await fetch(
              `/admin/my-reports/reject-claim/${id_laporan}`,
              {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                  alasan: alasan === "Alasan lainnya" ? alasanLain : alasan,
                }),
              }
            );

            const data = await response.json();
            success = data.success;

            if (success) {
              Swal.fire(
                "Berhasil!",
                data.message || "Klaim berhasil ditolak.",
                "success"
              ).then(() => {
                window.location.reload();
              });
            } else {
              Swal.fire(
                "Error",
                data.message || "Terjadi kesalahan saat menolak klaim.",
                "error"
              );
              closeRejectClaimModal(); // Tutup modal saat error
            }
          } catch (error) {
            console.error("Fetch Error:", error);
            Swal.fire(
              "Error",
              "Terjadi kesalahan jaringan atau server.",
              "error"
            );
            closeRejectClaimModal(); // Tutup modal saat error jaringan
          } finally {
            // Kembalikan tombol ke keadaan semula hanya jika tidak terjadi reload (yaitu, jika ada error)
            if (!success) {
              submitButton.textContent = originalText;
              // Aktifkan kembali tombol berdasarkan status form yang di-reset (biasanya disabled)
              const alasanSelected = document.getElementById("alasan").value;
              submitButton.disabled = !alasanSelected;
            }
          }
        });
      }
    </script>
