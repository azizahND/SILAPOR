<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profil Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-gray-100">
  <div class="ml-64 p-6">
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

      <div class="bg-white rounded-2xl border border-gray-200 shadow-lg overflow-hidden">
        <div class="md:flex">

          <!-- Foto Profil -->
          <div class="md:w-1/3 p-8 bg-gray-50 flex flex-col items-center justify-center">
            <img class="w-32 h-32 rounded-full shadow-md object-cover" 
                 src="<%= user && user.foto ? '/uploads/' + user.foto : '/uploads/default.jpg' %>" 
                 alt="Foto Profil">
            <h3 class="text-2xl font-bold text-gray-900 mt-4 text-center"><%= user ? user.nama : '-' %></h3>
          </div>

          <!-- Detail -->
          <div class="md:w-2/3 p-8">
            <h4 class="text-lg font-semibold text-gray-700 mb-5">Detail Informasi</h4>
            <div class="space-y-4">
              
              <!-- Email -->
              <div class="flex items-start">
                <div class="flex-shrink-0 w-8 text-center"><i class="fas fa-envelope text-gray-400"></i></div>
                <div class="ml-4">
                  <p class="text-sm text-gray-500">Email</p>
                  <p class="font-medium text-gray-800"><%= user ? user.email : '-' %></p>
                </div>
              </div>

              <!-- Alamat -->
              <div class="flex items-start">
                <div class="flex-shrink-0 w-8 text-center"><i class="fas fa-map-marker-alt text-gray-400"></i></div>
                <div class="ml-4">
                  <p class="text-sm text-gray-500">Alamat</p>
                  <p class="font-medium text-gray-800"><%= user ? user.alamat : '-' %></p>
                </div>
              </div>

              <!-- Nomor HP -->
              <div class="flex items-start">
                <div class="flex-shrink-0 w-8 text-center"><i class="fas fa-phone text-gray-400"></i></div>
                <div class="ml-4">
                  <p class="text-sm text-gray-500">Nomor HP</p>
                  <p class="font-medium text-gray-800"><%= user ? user.no_telepon : '-' %></p>
                </div>
              </div>

              <!-- Role -->
              <div class="flex items-start">
                <div class="flex-shrink-0 w-8 text-center"><i class="fas fa-user-shield text-gray-400"></i></div>
                <div class="ml-4">
                  <p class="text-sm text-gray-500">Role</p>
                  <p class="font-medium text-gray-800"><%= user ? user.role : '-' %></p>
                </div>
              </div>
            </div>

            <!-- Tombol Edit & Kembali -->
            <div class="mt-8 border-t border-gray-200 pt-6 flex justify-end gap-4">
              <!-- Tombol Kembali -->
              <a href="/admin/dashboard" class="inline-flex items-center bg-gray-500 hover:bg-gray-600 text-white py-2 px-5 rounded-xl font-semibold text-base transition-transform duration-200 shadow-sm hover:scale-105">
                <i class="fas fa-arrow-left mr-2"></i>
                Kembali
              </a>

              <!-- Tombol Edit -->
              <a href="/admin/edit-profile" class="inline-flex items-center bg-green-600 hover:bg-green-700 text-white py-2 px-5 rounded-xl font-semibold text-base transition-transform duration-200 shadow-sm hover:scale-105">
                <i class="fas fa-pencil-alt mr-2"></i>
                Edit Profile
              </a>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>
</html>
