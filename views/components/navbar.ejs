    <!-- Menu Content -->
    <div
      id="menuContent"
      class="hidden lg:flex flex-col lg:flex-row lg:items-center gap-0 lg:gap-8 absolute lg:static top-16 left-0 right-0 w-full lg:w-auto bg-white/95 lg:bg-transparent border-t lg:border-0 shadow-xl lg:shadow-none py-4 lg:p-0 rounded-b-2xl lg:rounded-none backdrop-blur-lg lg:backdrop-blur-none"
    >
      <!-- Navigation Links -->
      <a
