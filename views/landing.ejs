<section class="px-6 py-16 bg-white/70 dark:bg-gray-800/70 backdrop-blur-md">
  <div class="max-w-7xl mx-auto text-center">
    <h2
      class="text-3xl font-bold text-gray-900 mb-10"
    >
      Laporan Penemuan Barang
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% laporanPenemuan.forEach(item => { %>
        <div
          class="p-6 bg-white text-start shadow-xl dark:bg-gray-900 rounded-2xl shadow hover:shadow-2xl transition-all duration-300"
        >
          <img
            src="/uploads/<%= item.foto_barang %>"
            alt="<%= item.nama_barang %>"
            class="w-full h-48 object-cover rounded-xl mb-3"
            onerror="this.src='/img/no-image.png'"
          />
          <h3 class="font-semibold text-lg text-gray-900 dark:text-gray-100 mb-1">
            <%= item.nama_barang %>
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Lokasi: <%= item.lokasi %>
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-500 mb-3">
            Ditemukan oleh: <%= item.User?.nama || 'Anonim' %>
          </p>

          <button
          class="detail-btn px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg text-sm transition"
          data-nama="<%= item.nama_barang %>"
          data-lokasi="<%= item.lokasi %>"
          data-tanggal="<%= item.tanggal_kejadian ? item.tanggal_kejadian.toLocaleDateString('id-ID') : '-' %>"
          data-deskripsi="<%= item.deskripsi || 'Tidak ada deskripsi' %>"
          data-foto="/uploads/<%= item.foto_barang %>"
        >
          Lihat Detail
        </button>

        </div>
      <% }) %>
    </div>
  </div>
</section>

<section class="px-6 py-16 bg-white/70 dark:bg-gray-800/70 backdrop-blur-md">
  <div class="max-w-7xl mx-auto text-center">
    <h2
      class="text-3xl font-bold text-gray-800 mb-10"
    >
      Laporan Kehilangan Barang
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% laporanKehilangan.forEach(item => { %>
