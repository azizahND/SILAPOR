<div
  id="global-modal"
  class="fixed inset-0 hidden z-[9999] flex items-center justify-center bg-black/50 backdrop-blur-sm"
>
  <div
    class="absolute inset-0"
    onclick="closeModal()"
  ></div>

  <div
    id="modal-content"
    class="relative bg-white dark:bg-gray-900 rounded-2xl shadow-xl w-11/12 md:w-1/2 max-h-[80vh] overflow-y-auto p-6 z-10"
  >
    <button
      onclick="closeModal()"
      class="absolute top-3 right-3 text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 text-xl"
    >
      ✖
    </button>

    <img
      id="modal-image"
      src=""
      alt=""
      class="w-full h-64 object-cover rounded-xl mb-4"
    />
    <h3 id="modal-title" class="text-2xl font-semibold text-gray-900 dark:text-white mb-2"></h3>
    <p class="text-gray-700 dark:text-gray-300 mb-1"><strong>Lokasi:</strong> <span id="modal-lokasi"></span></p>
    <p class="text-gray-700 dark:text-gray-300 mb-1"><strong>Tanggal:</strong> <span id="modal-tanggal"></span></p>
    <p class="text-gray-700 dark:text-gray-300 mb-3"><strong>Deskripsi:</strong> <span id="modal-deskripsi"></span></p>
    <button
  onclick="window.location.href='/login'"
  class="mt-4 w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 rounded-lg transition"
>
  Masuk untuk Hubungi Penemu
</button>
  </div>
</div>







    <footer
      class="py-6 bg-gray-50 dark:bg-gray-900 text-center text-gray-600 dark:text-gray-400 border-t border-gray-200 dark:border-gray-700"
    >
      <p>
        © 2025 SILAPOR - Universitas Andalas |
        <span class="text-green-600 dark:text-green-400 font-semibold"
          >Dibangun oleh Kelompok 5 PPSI</span
        >
      </p>
    </footer>

    <script>
  // Fungsi buka modal
  function openModal(nama, lokasi, tanggal, deskripsi, foto) {
    document.getElementById("modal-title").innerText = nama;
    document.getElementById("modal-lokasi").innerText = lokasi;
    document.getElementById("modal-tanggal").innerText = tanggal;
    document.getElementById("modal-deskripsi").innerText = deskripsi;
    document.getElementById("modal-image").src = foto;

    document.getElementById("global-modal").classList.remove("hidden");
    document.body.classList.add("overflow-hidden");
  }

  // Fungsi tutup modal
  function closeModal() {
    document.getElementById("global-modal").classList.add("hidden");
    document.body.classList.remove("overflow-hidden");
  }

  // 🧠 Tambahan: event listener buat tombol detail
  document.querySelectorAll(".detail-btn").forEach((btn) => {
    btn.addEventListener("click", () => {
      const nama = btn.dataset.nama;
      const lokasi = btn.dataset.lokasi;
      const tanggal = btn.dataset.tanggal;
      const deskripsi = btn.dataset.deskripsi;
      const foto = btn.dataset.foto;

      openModal(nama, lokasi, tanggal, deskripsi, foto);
    });
  });
</script>

  </body>
</html>